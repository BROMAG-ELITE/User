<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.FeedbackActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/feedbackToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="65dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/backProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_backarrow"/>
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/feedbackToolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="26dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="24dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate Your Experience"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/comfortaa_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Are you satisfied with this Service?"
                        android:textSize="14sp"
                        android:textColor="#616365"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/comfortaa_regular"/>
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:numStars="5"
                        android:secondaryProgressTint="@android:color/transparent"
                        android:rating="0"
                        android:stepSize="1"
                        android:progressTint="#FFC850"
                        android:layout_marginTop="25dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtHowCanImprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell us we can improve?"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_marginTop="33dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardRating"
                app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                android:id="@+id/catLay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtHowCanImprove">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCat1"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:background="@drawable/button_deselected"
                    android:fontFamily="@font/comfortaa_semi_bold"
                    android:text="Suggestion"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:textAllCaps="false"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCat2"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/button_deselected"
                    android:fontFamily="@font/comfortaa_semi_bold"
                    android:text="Complaint"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catLay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/catLay1">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCat3"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:background="@drawable/button_deselected"
                    android:fontFamily="@font/comfortaa_semi_bold"
                    android:text="App Experience"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCat4"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/button_deselected"
                    android:fontFamily="@font/comfortaa_semi_bold"
                    android:text="Need Help"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:textColor="#8A8A8A"
                    android:textSize="14sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/edtFeedbackLay"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/feedback_edt_bg"
                app:layout_constraintTop_toBottomOf="@id/catLay2">
                <EditText
                    android:id="@+id/edtFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Tell us on how can we improve..."
                    android:textColorHint="#B7B7B7"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:textColor="#707070"
                    android:lineSpacingExtra="2dp"
                    android:gravity="start"
                    android:maxLength="50"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="right">
                    <TextView
                        android:id="@+id/charCountFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#ACACAC"
                        android:fontFamily="@font/comfortaa_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/50 Characters"
                        android:textSize="12sp"
                        android:textColor="#ACACAC"
                        android:fontFamily="@font/comfortaa_regular"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFeedbackSubmit"
                android:layout_width="166dp"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button"
                android:fontFamily="@font/comfortaa_semi_bold"
                android:text="Submit"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtFeedbackLay"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>