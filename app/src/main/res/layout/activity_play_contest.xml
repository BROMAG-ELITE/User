<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayContestActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pcToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="65dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/backPlayContest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_backarrow"/>
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Contest"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txtOrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Order ID"
        android:textColor="#CD5C08"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pcToolbar"/>
    <LinearLayout
        android:id="@+id/orderidLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mobile_edit_bg"
        app:layout_constraintTop_toBottomOf="@id/txtOrderID">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_order"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <EditText
            android:id="@+id/edtOrderID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:hint="Order ID"
            android:background="@drawable/mobile_edit_bg"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:maxLength="12"
            android:textColorHint="#9999B7"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Mobile Number"
        android:textColor="#CD5C08"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderidLay"/>
    <LinearLayout
        android:id="@+id/mobileLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mobile_edit_bg"
        app:layout_constraintTop_toBottomOf="@id/txtMobile">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_mobile"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <EditText
            android:id="@+id/edtMobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:hint="Mobile Number"
            android:background="@drawable/mobile_edit_bg"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="#9999B7"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Scratch Code"
        android:textColor="#CD5C08"
        android:textSize="13sp"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileLay"/>
    <LinearLayout
        android:id="@+id/codeLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mobile_edit_bg"
        app:layout_constraintTop_toBottomOf="@id/txtCode">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_code"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <EditText
            android:id="@+id/edtCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:hint="Scratch code"
            android:background="@drawable/mobile_edit_bg"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="#9999B7"
            android:textSize="12sp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/codeLay"/>

</androidx.constraintlayout.widget.ConstraintLayout>