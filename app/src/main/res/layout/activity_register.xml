<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".auth.RegisterActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtWelcomeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's start enjoying \nwith BROMAG"
        android:textColor="#FBECB2"
        android:textSize="20sp"
        android:lineSpacingExtra="7dp"
        android:letterSpacing="0.15"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Name"
        android:textColor="#FBECB2"
        android:textSize="14sp"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtWelcomeback"/>
    <LinearLayout
        android:id="@+id/nameLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mobile_edit_bg"
        app:layout_constraintTop_toBottomOf="@id/txtUsername">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/uname"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:hint="Your Name"
            android:background="@drawable/mobile_edit_bg"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="#9999B7"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Email ID"
        android:textColor="#FBECB2"
        android:textSize="14sp"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameLay"/>
    <LinearLayout
        android:id="@+id/emailLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mobile_edit_bg"
        app:layout_constraintTop_toBottomOf="@id/txtEmail">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_mail"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"/>
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:hint="Your Email ID"
            android:background="@drawable/mobile_edit_bg"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="#9999B7"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Mobile Number"
        android:textColor="#FBECB2"
        android:textSize="14sp"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailLay"/>
    <LinearLayout
        android:id="@+id/mobileLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mobile_edit_bg"
        app:layout_constraintTop_toBottomOf="@id/txtMobile">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mobile"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <EditText
            android:id="@+id/edtMobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:hint="Your Mobile Number"
            android:background="@drawable/mobile_edit_bg"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="#9999B7"
            android:textSize="12sp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:background="@drawable/button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileLay"/>
    <LinearLayout
        android:id="@+id/txtSignupLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="#FBECB2"
            android:textSize="12sp"
            android:fontFamily="@font/comfortaa_regular"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/txtSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#CD5C08"
            android:textSize="13sp"
            android:fontFamily="@font/comfortaa_bold"
            android:includeFontPadding="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>