<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ContactusActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contactusToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="65dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/backProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_backarrow"/>
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa_bold"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/contactusToolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txthelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How can we help you?"
                android:textSize="18sp"
                android:textColor="#CD5C08"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Name"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/comfortaa_semi_bold"
                android:includeFontPadding="false"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txthelp"/>
            <LinearLayout
                android:id="@+id/nameLay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mobile_edit_bg"
                app:layout_constraintTop_toBottomOf="@id/txtUsername">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/uname"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"/>
                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comfortaa_semi_bold"
                    android:hint="Your Name"
                    android:background="@drawable/mobile_edit_bg"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="#9999B7"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Mail Id"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/comfortaa_semi_bold"
                android:includeFontPadding="false"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameLay"/>
            <LinearLayout
                android:id="@+id/mailLay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mobile_edit_bg"
                app:layout_constraintTop_toBottomOf="@id/txtMail">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_mail"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"/>
                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comfortaa_semi_bold"
                    android:hint="Your Mail Id"
                    android:background="@drawable/mobile_edit_bg"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="#9999B7"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Mobile Number"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/comfortaa_semi_bold"
                android:includeFontPadding="false"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mailLay"/>
            <LinearLayout
                android:id="@+id/numberLay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mobile_edit_bg"
                app:layout_constraintTop_toBottomOf="@id/txtNumber">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_mobile"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"/>
                <EditText
                    android:id="@+id/edtNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comfortaa_semi_bold"
                    android:hint="Your Mobile Number"
                    android:background="@drawable/mobile_edit_bg"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="#9999B7"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Message"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/comfortaa_semi_bold"
                android:includeFontPadding="false"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/numberLay"/>
            <LinearLayout
                android:id="@+id/edtMessageLay"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/feedback_edt_bg"
                app:layout_constraintTop_toBottomOf="@id/txtMessage">
                <EditText
                    android:id="@+id/edtMesg"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Tell us on how can we help you..."
                    android:textColorHint="#B7B7B7"
                    android:fontFamily="@font/comfortaa_regular"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:textColor="#707070"
                    android:lineSpacingExtra="2dp"
                    android:gravity="start"
                    android:maxLength="50"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="right">
                    <TextView
                        android:id="@+id/charCountFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textColor="#ACACAC"
                        android:fontFamily="@font/comfortaa_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/50 Characters"
                        android:textSize="12sp"
                        android:textColor="#ACACAC"
                        android:fontFamily="@font/comfortaa_regular"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContactusSubmit"
                android:layout_width="120dp"
                android:layout_height="43dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/comfortaa_semi_bold"
                android:text="Submit"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtMessageLay"/>

            <TextView
                android:id="@+id/txtLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="18sp"
                android:textColor="#CD5C08"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/comfortaa_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnContactusSubmit"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/mapCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@id/txtLoc">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/mapImg"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/map_ss"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/mapCard">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BROMAG INDIA PRIVATE LIMITED,"
                    android:textSize="14sp"
                    android:textColor="#616365"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No 17, Vallal Paari Nager,"
                    android:textSize="14sp"
                    android:textColor="#616365"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pallikarani,Chennai 600 100,"
                    android:textSize="14sp"
                    android:textColor="#616365"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamil Nadu, India."
                    android:textSize="14sp"
                    android:textColor="#616365"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1800 3099 835"
                    android:textSize="14sp"
                    android:textColor="#616365"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOCIAL LINK"
                    android:textSize="14sp"
                    android:textColor="#CD5C08"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/comfortaa_bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/fb"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/wtapp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/insta"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/utube"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/linkedin"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>