<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".auth.OtpActivity">
    <LinearLayout
        android:id="@+id/backOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backarrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Back"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/comfortaa_medium"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgOtp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        android:layout_marginTop="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backOtp" />
    <TextView
        android:id="@+id/txtEnterOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Enter your OTP"
        android:textSize="14sp"
        android:textColor="#FBECB2"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:layout_marginStart="29dp"
        android:layout_marginTop="81dp"
        app:layout_constraintTop_toBottomOf="@id/imgOtp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtSentCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We've sent a code to your Mobile number 98********"
        android:textSize="12sp"
        android:textColor="#FBECB2"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comfortaa_regular"
        app:layout_constraintTop_toBottomOf="@id/txtEnterOtp"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/otpLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mobile_edit_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtSentCode">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_otp"
            android:layout_gravity="center"
            android:layout_marginStart="21dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mobile_edit_bg"
            android:layout_gravity="center"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:inputType="number"
            android:maxLength="6"
            android:hint="Your OTP here"
            android:layout_marginStart="10dp"
            android:lineSpacingExtra="6sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#9999B7"
            android:textSize="12sp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtResendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP in : "
        android:textSize="12sp"
        android:textColor="#FBECB2"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/comfortaa_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/otpLayout"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtOtpTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:59"
        android:textSize="12sp"
        android:textColor="#CD5C08"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/comfortaa_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/otpLayout"
        app:layout_constraintStart_toEndOf="@id/txtResendOtp"/>
    <TextView
        android:id="@+id/txtResendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:visibility="gone"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:textSize="12sp"
        android:textColor="#00349B"
        android:fontFamily="@font/comfortaa_semi_bold"
        app:layout_constraintEnd_toEndOf="@id/otpLayout"
        app:layout_constraintTop_toTopOf="@id/txtResendOtp"
        app:layout_constraintBottom_toBottomOf="@id/txtResendOtp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:background="@drawable/button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtOtpTimer"/>

</androidx.constraintlayout.widget.ConstraintLayout>