<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".auth.MobileNumberActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtWelcomeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back to \nBROMAG"
        android:textColor="#FBECB2"
        android:textSize="20sp"
        android:lineSpacingExtra="7dp"
        android:letterSpacing="0.15"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="27dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/txtEnterMobNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/txtWelcomeback"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Mobile Number"
            android:textColor="#FBECB2"
            android:textSize="14sp"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mobileLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mobile_edit_bg"
        app:layout_constraintTop_toBottomOf="@id/txtEnterMobNo">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mobile"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <EditText
            android:id="@+id/edtMobileNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/comfortaa_semi_bold"
            android:hint="Your Mobile Number"
            android:background="@drawable/mobile_edit_bg"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="#9999B7"
            android:textSize="12sp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetOtp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="72dp"
        android:background="@drawable/button"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:fontFamily="@font/comfortaa_semi_bold"
        android:text="Get OTP"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileLay"/>
    <LinearLayout
        android:id="@+id/txtSignupLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't have an account? "
            android:textColor="#FBECB2"
            android:textSize="12sp"
            android:fontFamily="@font/comfortaa_regular"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/txtSignUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#CD5C08"
            android:textSize="13sp"
            android:fontFamily="@font/comfortaa_bold"
            android:includeFontPadding="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>